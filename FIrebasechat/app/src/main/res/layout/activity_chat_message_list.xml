<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/tvChatmessageLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusedByDefault="true"
        android:padding="10dp"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="8dp"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="#fefffe"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_cornerRadius="4dp"
        app:cmv_showArrow="true">

        <ImageView
            android:id="@+id/ImageViewLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_alt_black_24dp" />

        <ImageView
            android:id="@+id/ImagePDFViewLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_picture_as_pdf_black_24dp" />

        <TextView
            android:id="@+id/tvMessageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDateleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@+id/tvMessageLeft"
             />

        <TextView
            android:id="@+id/tvTimeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDateleft"
            />


    </me.himanshusoni.chatmessageview.ChatMessageView>

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/tvChatmessageRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:focusedByDefault="true"
        android:gravity="right"
        android:padding="10dp"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="8dp"
        app:cmv_arrowPosition="right"
        app:cmv_backgroundColor="#8889ba34"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_cornerRadius="4dp"
        app:cmv_showArrow="true">

        <ImageView
            android:id="@+id/ImageViewRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_alt_black_24dp" />

        <ImageView
            android:id="@+id/ImagePDFViewRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_picture_as_pdf_black_24dp" />
        <!--/>-->

        <TextView
            android:id="@+id/tvMessageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMessageRight"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvDateRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@+id/tvMessageRight" />


        <TextView
            android:id="@+id/tvTimeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDateRight" />


    </me.himanshusoni.chatmessageview.ChatMessageView>

</LinearLayout>